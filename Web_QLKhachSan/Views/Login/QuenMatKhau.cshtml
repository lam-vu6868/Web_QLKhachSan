@model Web_QLKhachSan.Models.QuenMatKhau

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Quên mật khẩu";
}

<h2 class="title"><i class="fas fa-key"></i> Quên Mật Khẩu</h2>

<div class="auth-card">
    <p class="text-center" style="color: #666; margin-bottom: 20px;">
  Nhập email của bạn để nhận mã OTP đặt lại mật khẩu
    </p>

    @if (ViewBag.ErrorMessage != null)
    {
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

    @using (Html.BeginForm("QuenMatKhau", "Login", FormMethod.Post, new { id = "forgotForm", @class = "auth-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="input-group">
            <span><i class="fas fa-envelope"></i></span>
       @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email của bạn", type = "email" })
        </div>
     @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        <button type="submit" class="btn primary" id="forgot-submit">
            <i class="fas fa-paper-plane"></i> Gửi mã OTP
</button>

        <p class="toggle">
       Quay lại <a href="@Url.Action("DangNhap", "Login")">Đăng Nhập</a>
        </p>
    }
</div>
