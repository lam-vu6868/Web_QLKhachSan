@{
    ViewBag.Title = "Xác Nhận Đặt Phòng";
}
<link rel="stylesheet" href="~/assets/css/dat-phong.css" />

<section class="page-header">
    <div class="container">
        <h1 data-aos="fade-right">Hoàn Tất Đặt Chỗ</h1>
        <p data-aos="fade-left">Quá trình thanh toán của bạn được bảo mật tuyệt đối</p>
    </div>
</section>
<main class="main-content-area">
    <div class="container checkout-layout">
        <div class="checkout-form-area">
            <div class="checkout-steps">
                <div class="step" onclick="location.href='@Url.Action("Index", "ThongTin")'">1. Thông tin</div>
                <div class="step" onclick="location.href='@Url.Action("Index", "DichVuThem")'">2. Dịch Vụ</div>
                <div class="step" onclick="location.href='@Url.Action("Index", "ThanhToan")'">3. Thanh toán</div>
                <div class="step active">4. Xác nhận</div>
            </div>

            <form class="checkout-form">
                <div class="confirmation-container">
                    <div class="confirmation-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h2 class="form-section-title">Đặt Phòng Thành Công!</h2>
                    <p class="confirmation-message">
                        Cảm ơn bạn đã tin tưởng lựa chọn Serene Horizon.<br>
                        Chúng tôi đã gửi xác nhận đặt phòng đến email của bạn.<br>
                        Nếu cần hỗ trợ, vui lòng liên hệ hotline <b>0123 456 789</b>.
                    </p>

                    <div class="booking-details" id="booking-details">
                        <h3>Chi tiết đặt phòng</h3>

                        <div class="detail-section">
                            <h4><i class="fas fa-user"></i> Thông tin khách hàng</h4>
                            <div class="detail-row">
                                <span class="label">Họ và tên:</span>
                                <span class="value" id="customer-name">-</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Email:</span>
                                <span class="value" id="customer-email">-</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Số điện thoại:</span>
                                <span class="value" id="customer-phone">-</span>
                            </div>
                        </div>

                        <div class="detail-section">
                            <h4><i class="fas fa-calendar"></i> Thông tin đặt phòng</h4>
                            <div class="detail-row">
                                <span class="label">Mã đặt phòng:</span>
                                <span class="value" id="booking-code">#SH2024001</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Ngày nhận phòng:</span>
                                <span class="value" id="checkin-date">-</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Ngày trả phòng:</span>
                                <span class="value" id="checkout-date">-</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Số người:</span>
                                <span class="value" id="guests">-</span>
                            </div>
                        </div>

                        <div class="detail-section">
                            <h4><i class="fas fa-credit-card"></i> Thông tin thanh toán</h4>
                            <div class="detail-row">
                                <span class="label">Phương thức thanh toán:</span>
                                <span class="value" id="payment-method">-</span>
                            </div>
                            <div class="detail-row" id="card-info" style="display: none;">
                                <span class="label">Số thẻ:</span>
                                <span class="value" id="card-number">-</span>
                            </div>
                            <div class="detail-row" id="card-expiry" style="display: none;">
                                <span class="label">Ngày hết hạn:</span>
                                <span class="value" id="card-expiry-date">-</span>
                            </div>
                            <div class="detail-row" id="bank-info" style="display: none;">
                                <span class="label">Ngân hàng:</span>
                                <span class="value" id="bank-name">-</span>
                            </div>
                            <div class="detail-row" id="bank-account" style="display: none;">
                                <span class="label">Số tài khoản:</span>
                                <span class="value" id="bank-account-number">-</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Trạng thái:</span>
                                <span class="value success">Đã thanh toán thành công</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="@Url.Action("Index", "Home")" class="cta-button">Về Trang Chủ</a>
                        <a href="#" type="button" class="cta-button" onclick="window.print()">
                            In Hóa Đơn
                        </a>
                    </div>
                </div>
            </form>
        </div>
        @Html.Partial("_OrderSummary")
    </div>
</main>

<script src="~/assets/js/dat-phong.js"></script>
