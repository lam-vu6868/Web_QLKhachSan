<script>
    // Thêm hiệu ứng AOS cho các FAQ items khi chuyển đổi category
    document.addEventListener('DOMContentLoaded', function() {
        const faqCategories = document.querySelectorAll('.faq-category');
        const faqLists = document.querySelectorAll('.faq-list');
        
        // Thêm hiệu ứng cho tất cả FAQ items
        const addAOSToFAQItems = (faqList) => {
            const faqItems = faqList.querySelectorAll('.faq-item');
            faqItems.forEach((item, index) => {
                if (!item.hasAttribute('data-aos')) {
                    item.setAttribute('data-aos', 'fade-up');
                    item.setAttribute('data-aos-duration', '600');
                    item.setAttribute('data-aos-delay', (600 + index * 100).toString());
                }
            });
        };
        
        // Thêm hiệu ứng cho tất cả FAQ lists hiện có
        faqLists.forEach(addAOSToFAQItems);
        
        // Xử lý khi click vào category
        faqCategories.forEach(category => {
            category.addEventListener('click', function() {
                const targetCategory = this.getAttribute('data-category');
                const targetList = document.querySelector(`[data-category="${targetCategory}"].faq-list`);
                
                // Ẩn tất cả các lists
                faqLists.forEach(list => {
                    list.style.display = 'none';
                    list.style.opacity = '0';
                });
                
                // Hiển thị list được chọn với hiệu ứng
                if (targetList) {
                    setTimeout(() => {
                        targetList.style.display = 'block';
                        addAOSToFAQItems(targetList);
                        
                        // Refresh AOS để áp dụng hiệu ứng mới
                        if (typeof AOS !== 'undefined') {
                            AOS.refresh();
                        }
                        
                        setTimeout(() => {
                            targetList.style.opacity = '1';
                        }, 50);
                    }, 100);
                }
                
                // Cập nhật active state
                faqCategories.forEach(cat => cat.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Hiển thị list đầu tiên với hiệu ứng
        const firstList = document.querySelector('.faq-list[data-category="booking"]');
        if (firstList) {
            firstList.style.opacity = '1';
        }
    });
</script>

