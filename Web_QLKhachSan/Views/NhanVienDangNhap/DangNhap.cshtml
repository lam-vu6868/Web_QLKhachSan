@model Web_QLKhachSan.Models.DangNhapNhanVien

@{
    ViewBag.Title = "Đăng nhập nhân viên";
    Layout = null;
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Đăng nhập nhân viên - Serene Horizon</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/nhanvien-dangnhap.css" />
</head>
<body>
    <main class="staff-auth-page">
        <section class="auth-shell">
            <div class="auth-card" role="region" aria-labelledby="auth-title">
                <header class="auth-heading">
                    <div class="auth-logo">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h1 id="auth-title">Portal Nhân Viên</h1>
                    <p class="auth-sub">Đăng nhập bằng tài khoản nhân viên để truy cập hệ thống quản lý</p>
                </header>

                @using (Html.BeginForm("DangNhap", "NhanVienDangNhap", FormMethod.Post, new { @class = "auth-form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    @* Hiển thị lỗi từ server *@
                    if (ViewBag.ErrorMessage != null)
                    {
                        <div class="error-message">
                            <i class="fas fa-exclamation-circle"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="form-row">
                        @Html.LabelFor(m => m.TenDangNhap, new { @for = "TenDangNhap" })
                        @Html.TextBoxFor(m => m.TenDangNhap, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập tên đăng nhập",
                            autocomplete = "username"
                        })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-row">
                        @Html.LabelFor(m => m.MatKhau, new { @for = "MatKhau" })
                        @Html.PasswordFor(m => m.MatKhau, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập mật khẩu",
                            autocomplete = "current-password"
                        })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-row form-actions">
                        <button type="submit" class="btn-auth">
                            <i class="fas fa-sign-in-alt"></i>
                            Đăng nhập
                        </button>
                    </div>

                    <div class="form-foot">
                        <a class="link-muted" href='@Url.Action("QuenMatKhau", "NhanVienDangNhap")'>Quên mật khẩu?</a>
                    </div>
                }
            </div>
        </section>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>

