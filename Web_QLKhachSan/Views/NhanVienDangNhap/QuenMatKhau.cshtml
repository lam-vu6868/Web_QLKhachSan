
@model Web_QLKhachSan.Models.QuenMatKhauNhanVien

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Quên mật khẩu - Serene Horizon</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/nhanvien-dangnhap.css" />
</head>
<body>
    <main class="staff-auth-page">
        <section class="auth-shell">
            <div class="auth-card" role="region" aria-labelledby="auth-title">
                <header class="auth-heading">
                    <div class="auth-logo">
                        <i class="fas fa-key"></i>
                    </div>
                    <h1 id="auth-title">Khôi phục mật khẩu</h1>
                    <p class="auth-sub">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
                </header>

                @using (Html.BeginForm("QuenMatKhau", "NhanVienDangNhap", FormMethod.Post, new { @class = "auth-form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    @* Hiển thị thông báo thành công *@
                    if (ViewBag.SuccessMessage != null)
                    {
                        <div class="success-message">
                            <i class="fas fa-check-circle"></i>
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    @* Hiển thị lỗi từ server *@
                    if (ViewBag.ErrorMessage != null)
                    {
                        <div class="error-message">
                            <i class="fas fa-exclamation-circle"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @* Hiển thị thông tin *@
                    if (ViewBag.InfoMessage != null)
                    {
                        <div class="info-message">
                            <i class="fas fa-info-circle"></i>
                            @ViewBag.InfoMessage
                        </div>
                    }

                    <div class="form-row">
                        @Html.LabelFor(m => m.Email, new { @for = "Email" })
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control",
                            placeholder = "nhanvien@company.com",
                            type = "email"
                        })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-row form-actions">
                        <button type="submit" class="btn-auth">
                            <i class="fas fa-paper-plane"></i>
                            Gửi hướng dẫn
                        </button>
                    </div>

                    <div class="form-foot">
                        <a class="link-muted" href='@Url.Action("DangNhap", "NhanVienDangNhap")'>
                            <i class="fas fa-arrow-left"></i>
                            Quay lại đăng nhập
                        </a>
                    </div>
                }
            </div>
        </section>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>

