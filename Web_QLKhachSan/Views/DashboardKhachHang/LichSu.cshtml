@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/assets/css/dashboard-khachhang.css" />

<section class="dashboard-hero">
    <div class="container">
        <div class="welcome-card">
            <div class="welcome-content">
                <h1>Xin Chào, <span id="welcomeName">@(Session["HoVaTen"])</span>! 👋</h1>
                <p>Chào mừng trở lại với The Serene Horizon Hotel</p>
            </div>
            <div class="welcome-actions">
                <a href="@Url.Action("Index", "PhongNghi")" class="btn-primary">
                    <i class="fas fa-plus"></i> Đặt Phòng Mới
                </a>
            </div>
        </div>
    </div>
</section>

<section class="dashboard-main">
    <div class="container">
        <div class="dashboard-layout">
            <div class="dashboard-content">
                <section class="content-section">
                    <h2 class="section-title">Lịch Sử Giao Dịch</h2>
                    <div class="history-table-container">
                        <table class="history-table">
                            <thead>
                                <tr>
                                    <th>Mã Đơn</th>
                                    <th>Ngày Đặt</th>
                                    <th>Loại Phòng</th>
                                    <th>Dịch Vụ</th>
                                    <th>Thời Gian</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                                <tr>
                                    <td class="booking-id">#BK20250309001</td>
                                    <td>01/09/2025</td>
                                    <td>Deluxe Room</td>
                                    <td class="service-cell">
                                        <div class="service-summary">
                                            <span class="service-label">Spa & Massage</span>
                                            <button class="service-toggle" aria-expanded="false" title="Xem dịch vụ khác">+1</button>
                                            <ul class="service-list" hidden>
                                                <li>Spa & Massage</li>
                                                <li>Bữa sáng buffet</li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td>10/09/2025 - 15/09/2025</td>
                                    <td class="price">6.000.000 VNĐ</td>
                                    <td><span class="status-badge completed">Hoàn Thành</span></td>
                                    <td>
                                        <button class="btn-sm btn-primary" onclick="viewBookingDetails('BK20250309001')">Chi Tiết</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="booking-id">#BK20250308001</td>
                                    <td>10/08/2025</td>
                                    <td>Family Suite</td>
                                    <td class="service-cell">
                                        <div class="service-summary">
                                            <span class="service-label">Đưa đón sân bay</span>
                                        </div>
                                    </td>
                                    <td>20/08/2025 - 25/08/2025</td>
                                    <td class="price">12.000.000 VNĐ</td>
                                    <td><span class="status-badge completed">Hoàn Thành</span></td>
                                    <td>
                                        <button class="btn-sm btn-primary" onclick="viewBookingDetails('BK20250308001')">Chi Tiết</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="booking-id">#BK20250307001</td>
                                    <td>25/06/2025</td>
                                    <td>Ocean View Room</td>
                                    <td class="service-cell">
                                        <div class="service-summary">
                                            <span class="service-label">-</span>
                                        </div>
                                    </td>
                                    <td>05/07/2025 - 10/07/2025</td>
                                    <td class="price">8.000.000 VNĐ</td>
                                    <td><span class="status-badge cancelled">Đã Hủy</span></td>
                                    <td>
                                        <button class="btn-sm btn-secondary" onclick="viewBookingDetails('BK20250307001')">Chi Tiết</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="booking-id">#BK20250306001</td>
                                    <td>15/05/2025</td>
                                    <td>Standard Room</td>
                                    <td class="service-cell">
                                        <div class="service-summary">
                                            <span class="service-label">Bữa sáng buffet</span>
                                        </div>
                                    </td>
                                    <td>01/06/2025 - 03/06/2025</td>
                                    <td class="price">4.000.000 VNĐ</td>
                                    <td><span class="status-badge completed">Hoàn Thành</span></td>
                                    <td>
                                        <button class="btn-sm btn-primary" onclick="viewBookingDetails('BK20250306001')">Chi Tiết</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="booking-id">#BK20250305001</td>
                                    <td>20/04/2025</td>
                                    <td>Deluxe Ocean View</td>
                                    <td class="service-cell">
                                        <div class="service-summary">
                                            <span class="service-label">Hồ bơi</span>
                                            <button class="service-toggle" aria-expanded="false" title="Xem dịch vụ khác">+2</button>
                                            <ul class="service-list" hidden>
                                                <li>Hồ bơi</li>
                                                <li>Gym & Fitness</li>
                                                <li>Spa & Massage</li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td>15/05/2025 - 18/05/2025</td>
                                    <td class="price">9.000.000 VNĐ</td>
                                    <td><span class="status-badge completed">Hoàn Thành</span></td>
                                    <td>
                                        <button class="btn-sm btn-primary" onclick="viewBookingDetails('BK20250305001')">Chi Tiết</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>

            </div>
        </div>
    </div>
</section>
<script src="~/assets/js/dashboard-khachhang.js"></script>