@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/assets/css/dashboard-khachhang.css" />

<section class="dashboard-hero">
    <div class="container">
        <div class="welcome-card">
            <div class="welcome-content">
                <h1>Xin Chào, <span id="welcomeName">@(Session["HoVaTen"])</span>! 👋</h1>
                <p>Chào mừng trở lại với The Serene Horizon Hotel</p>
            </div>
            <div class="welcome-actions">
                <a href="@Url.Action("Index", "PhongNghi")" class="btn-primary">
                    <i class="fas fa-plus"></i> Đặt Phòng Mới
                </a>
            </div>
        </div>
    </div>
</section>

<section class="dashboard-main">
    <div class="container">
        <div class="dashboard-layout">
            <div class="dashboard-content">
                <section class="content-section">
                    <h2 class="section-title">Lịch Sử Đặt Phòng</h2>
                    <div class="history-table-container">
                        <table class="history-table">
                            <thead>
                                <tr>
                                    <th>Mã Đặt Phòng</th>
                                    <th>Loại Phòng</th>
                                    <th>Tên Phòng</th>
                                    <th>Ngày Nhận</th>
                                    <th>Ngày Trả</th>
                                    <th>Dịch Vụ</th>
                                    <th>Trạng Thái</th>
                                    <th>Tổng Tiền</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                                <!-- Example row with services -->
                                <tr>
                                    <td class="booking-id">#DP001</td>
                                    <td>Deluxe</td>
                                    <td>Phòng Double 104</td>
                                    <td>01/12/2025</td>
                                    <td>05/12/2025</td>
                                    <td class="service-cell">
                                        <button class="service-dropdown-btn" onclick="toggleServiceList(this)">
                                            <span class="service-count">3 dịch vụ</span>
                                            <i class="fas fa-chevron-down"></i>
                                        </button>
                                        <div class="service-dropdown-list">
                                            <div class="service-item">
                                                <i class="fas fa-spa"></i>
                                                <span>Spa & Massage</span>
                                            </div>
                                            <div class="service-item">
                                                <i class="fas fa-utensils"></i>
                                                <span>Bữa sáng buffet</span>
                                            </div>
                                            <div class="service-item">
                                                <i class="fas fa-car"></i>
                                                <span>Đưa đón sân bay</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="status-badge completed">Hoàn Thành</span></td>
                                    <td class="price">6.500.000đ</td>
                                    <td>
                                        <button class="btn-detail" onclick="viewBookingDetails('#DP001')">
                                            <i class="fas fa-file-alt"></i> Chi Tiết
                                        </button>
                                    </td>
                                </tr>
                                <!-- Example row without services -->
                                <tr>
                                    <td class="booking-id">#DP002</td>
                                    <td>Standard</td>
                                    <td>Phòng Single 201</td>
                                    <td>10/11/2025</td>
                                    <td>12/11/2025</td>
                                    <td class="service-cell">
                                        <span class="no-service">Không có</span>
                                    </td>
                                    <td><span class="status-badge confirmed">Đã Xác Nhận</span></td>
                                    <td class="price">2.000.000đ</td>
                                    <td>
                                        <button class="btn-detail" onclick="viewBookingDetails('#DP002')">
                                            <i class="fas fa-file-alt"></i> Chi Tiết
                                        </button>
                                    </td>
                                </tr>
                                <!-- Example pending -->
                                <tr>
                                    <td class="booking-id">#DP003</td>
                                    <td>Suite</td>
                                    <td>Phòng Family 305</td>
                                    <td>20/12/2025</td>
                                    <td>25/12/2025</td>
                                    <td class="service-cell">
                                        <button class="service-dropdown-btn" onclick="toggleServiceList(this)">
                                            <span class="service-count">2 dịch vụ</span>
                                            <i class="fas fa-chevron-down"></i>
                                        </button>
                                        <div class="service-dropdown-list">
                                            <div class="service-item">
                                                <i class="fas fa-swimming-pool"></i>
                                                <span>Hồ bơi</span>
                                            </div>
                                            <div class="service-item">
                                                <i class="fas fa-dumbbell"></i>
                                                <span>Gym & Fitness</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="status-badge pending">Chờ Xác Nhận</span></td>
                                    <td class="price">12.000.000đ</td>
                                    <td>
                                        <button class="btn-detail" onclick="viewBookingDetails('#DP003')">
                                            <i class="fas fa-file-alt"></i> Chi Tiết
                                        </button>
                                    </td>
                                </tr>
                                <!-- Example cancelled -->
                                <tr>
                                    <td class="booking-id">#DP004</td>
                                    <td>Deluxe</td>
                                    <td>Phòng Double 105</td>
                                    <td>05/10/2025</td>
                                    <td>08/10/2025</td>
                                    <td class="service-cell">
                                        <span class="no-service">Không có</span>
                                    </td>
                                    <td><span class="status-badge cancelled">Đã Hủy</span></td>
                                    <td class="price">4.000.000đ</td>
                                    <td>
                                        <button class="btn-detail" onclick="viewBookingDetails('#DP004')">
                                            <i class="fas fa-file-alt"></i> Chi Tiết
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="booking-id">#DP003</td>
                                    <td>Suite</td>
                                    <td>Phòng Family 305</td>
                                    <td>20/12/2025</td>
                                    <td>25/12/2025</td>
                                    <td class="service-cell">
                                        <button class="service-dropdown-btn" onclick="toggleServiceList(this)">
                                            <span class="service-count">2 dịch vụ</span>
                                            <i class="fas fa-chevron-down"></i>
                                        </button>
                                        <div class="service-dropdown-list">
                                            <div class="service-item">
                                                <i class="fas fa-swimming-pool"></i>
                                                <span>Hồ bơi</span>
                                            </div>
                                            <div class="service-item">
                                                <i class="fas fa-dumbbell"></i>
                                                <span>Gym & Fitness</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="status-badge pending">Chờ Xác Nhận</span></td>
                                    <td class="price">12.000.000đ</td>
                                    <td>
                                        <button class="btn-detail" onclick="viewBookingDetails('#DP003')">
                                            <i class="fas fa-file-alt"></i> Chi Tiết
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>

            </div>
        </div>
    </div>
</section>
<script src="~/assets/js/dashboard-khachhang.js"></script>