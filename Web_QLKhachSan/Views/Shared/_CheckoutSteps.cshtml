@{
    int currentStep = ViewBag.CurrentStep ?? 1;
}

<div class="checkout-steps">
    <div class="step @(currentStep == 1 ? "active" : "")" onclick="location.href='@Url.Action("ThongTinKhachHang", "DatPhong")'">
        1. Thông tin
    </div>
    <div class="step @(currentStep == 2 ? "active" : "")" onclick="location.href='@Url.Action("DichVuDatThem", "DatPhong")'">
        2. Dịch Vụ
    </div>
    <div class="step @(currentStep == 3 ? "active" : "")" onclick="location.href='@Url.Action("ThanhToan", "DatPhong")'">
        3. Thanh toán
    </div>
    <div class="step @(currentStep == 4 ? "active" : "")" onclick="location.href='@Url.Action("XacNhanHoaDon", "DatPhong")'">
        4. Xác nhận
    </div>
</div>
