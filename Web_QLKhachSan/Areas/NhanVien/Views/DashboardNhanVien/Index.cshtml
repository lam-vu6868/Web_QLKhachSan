
@{
    ViewBag.Title = "Index";
}
<link rel='stylesheet' href='@Url.Content("~/Areas/NhanVien/assets/css/dashboard.css")' />
<div class="main-content">
    <!-- Top Header -->
    <header class="dashboard-header">
        <div class="header-left">
            <div class="page-title">
                <button class="sidebar-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1>Dashboard Nhân Viên</h1>
                <p>Chào mừng bạn trở lại, hôm nay là <span id="current-date"></span></p>
            </div>
        </div>
        <div class="header-right">
            <div class="current-time">
                <i class="fas fa-clock"></i>
                <span id="current-time"></span>
            </div>
        </div>
    </header>

    <!-- Dashboard Content -->
    <main class="dashboard-main">
        <!-- Stats Cards -->
        <section class="stats-section">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card booking-card">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div class="stat-info">
                            <h3>24</h3>
                            <p>Đặt phòng hôm nay</p>
                            <span class="stat-change positive">+15%</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card occupancy-card">
                        <div class="stat-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div class="stat-info">
                            <h3>67/80</h3>
                            <p>Phòng đang sử dụng</p>
                            <span class="stat-change positive">84% tỷ lệ lấp đầy</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card checkin-card">
                        <div class="stat-icon">
                            <i class="fas fa-door-open"></i>
                        </div>
                        <div class="stat-info">
                            <h3>18</h3>
                            <p>Check-in hôm nay</p>
                            <span class="stat-change">Còn 6 khách chưa đến</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stat-card checkout-card">
                        <div class="stat-icon">
                            <i class="fas fa-door-closed"></i>
                        </div>
                        <div class="stat-info">
                            <h3>12</h3>
                            <p>Check-out hôm nay</p>
                            <span class="stat-change">Còn 3 phòng chưa dọn</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Actions -->
        <section class="quick-actions-section">
            <h2 class="section-title">
                <i class="fas fa-bolt"></i>
                Thao tác nhanh
            </h2>
            <div class="row">
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="new-booking">
                        <div class="action-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <span>Đặt phòng mới</span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="check-in">
                        <div class="action-icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <span>Check-in</span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="check-out">
                        <div class="action-icon">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <span>Check-out</span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="room-search">
                        <div class="action-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <span>Tìm phòng trống</span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="invoice">
                        <div class="action-icon">
                            <i class="fas fa-file-invoice"></i>
                        </div>
                        <span>Lập hóa đơn</span>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-6 mb-3">
                    <div class="quick-action-card" data-action="room-status">
                        <div class="action-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                        <span>Cập nhật phòng</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Today's Schedule & Activities -->
        <section class="schedule-section">
            <div class="row">
                <!-- Today's Check-ins -->
                <div class="col-lg-6 mb-4">
                    <div class="schedule-card">
                        <div class="card-header">
                            <h3>
                                <i class="fas fa-door-open"></i>
                                Check-in hôm nay
                            </h3>
                            <span class="badge-count">18</span>
                        </div>
                        <div class="card-body">
                            <div class="schedule-list">
                                <div class="schedule-item completed">
                                    <div class="time">08:30</div>
                                    <div class="info">
                                        <h4>Trần Văn Hùng</h4>
                                        <p>Phòng 203 - Deluxe Ocean View</p>
                                        <span class="status completed">Đã check-in</span>
                                    </div>
                                </div>
                                <div class="schedule-item pending">
                                    <div class="time">14:00</div>
                                    <div class="info">
                                        <h4>Nguyễn Thị Lan</h4>
                                        <p>Phòng 405 - Executive Suite</p>
                                        <span class="status pending">Chờ check-in</span>
                                    </div>
                                </div>
                                <div class="schedule-item pending">
                                    <div class="time">16:30</div>
                                    <div class="info">
                                        <h4>Lê Minh Đức</h4>
                                        <p>Phòng 108 - Family Bungalow</p>
                                        <span class="status pending">Chờ check-in</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="view-all-link">Xem tất cả check-in</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Check-outs -->
                <div class="col-lg-6 mb-4">
                    <div class="schedule-card">
                        <div class="card-header">
                            <h3>
                                <i class="fas fa-door-closed"></i>
                                Check-out hôm nay
                            </h3>
                            <span class="badge-count">12</span>
                        </div>
                        <div class="card-body">
                            <div class="schedule-list">
                                <div class="schedule-item completed">
                                    <div class="time">11:00</div>
                                    <div class="info">
                                        <h4>Phạm Thị Hoa</h4>
                                        <p>Phòng 302 - Deluxe Ocean View</p>
                                        <span class="status completed">Đã check-out</span>
                                    </div>
                                </div>
                                <div class="schedule-item pending">
                                    <div class="time">12:00</div>
                                    <div class="info">
                                        <h4>Võ Thanh Nam</h4>
                                        <p>Phòng 507 - Executive Suite</p>
                                        <span class="status cleaning">Đang dọn phòng</span>
                                    </div>
                                </div>
                                <div class="schedule-item late">
                                    <div class="time">11:00</div>
                                    <div class="info">
                                        <h4>Hoàng Văn Toàn</h4>
                                        <p>Phòng 201 - Deluxe Ocean View</p>
                                        <span class="status late">Quá giờ check-out</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="view-all-link">Xem tất cả check-out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Room Status Overview -->
        <section class="room-status-section">
            <h2 class="section-title">
                <i class="fas fa-th-large"></i>
                Tình trạng phòng
            </h2>
            <div class="room-legend">
                <div class="legend-item">
                    <span class="room-indicator available"></span>
                    <span>Trống (13)</span>
                </div>
                <div class="legend-item">
                    <span class="room-indicator occupied"></span>
                    <span>Đang ở (67)</span>
                </div>
                <div class="legend-item">
                    <span class="room-indicator cleaning"></span>
                    <span>Đang dọn (8)</span>
                </div>
                <div class="legend-item">
                    <span class="room-indicator maintenance"></span>
                    <span>Bảo trì (2)</span>
                </div>
            </div>
            <div class="room-grid">
                <!-- Floor 1 -->
                <div class="floor-section">
                    <h4>Tầng 1</h4>
                    <div class="room-row">
                        <div class="room-item available" data-room="101">101</div>
                        <div class="room-item occupied" data-room="102">102</div>
                        <div class="room-item occupied" data-room="103">103</div>
                        <div class="room-item cleaning" data-room="104">104</div>
                        <div class="room-item available" data-room="105">105</div>
                        <div class="room-item occupied" data-room="106">106</div>
                        <div class="room-item occupied" data-room="107">107</div>
                        <div class="room-item occupied" data-room="108">108</div>
                    </div>
                </div>
                <!-- Floor 2 -->
                <div class="floor-section">
                    <h4>Tầng 2</h4>
                    <div class="room-row">
                        <div class="room-item maintenance" data-room="201">201</div>
                        <div class="room-item occupied" data-room="202">202</div>
                        <div class="room-item occupied" data-room="203">203</div>
                        <div class="room-item available" data-room="204">204</div>
                        <div class="room-item occupied" data-room="205">205</div>
                        <div class="room-item cleaning" data-room="206">206</div>
                        <div class="room-item occupied" data-room="207">207</div>
                        <div class="room-item occupied" data-room="208">208</div>
                    </div>
                </div>
                <!-- More floors can be added here -->
            </div>
        </section>

        <!-- Recent Activities -->
        <section class="activities-section">
            <h2 class="section-title">
                <i class="fas fa-history"></i>
                Hoạt động gần đây
            </h2>
            <div class="activities-list">
                <div class="activity-item">
                    <div class="activity-icon check-in">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Check-in thành công</h4>
                        <p>Trần Văn Hùng đã check-in phòng 203</p>
                        <span class="time">5 phút trước</span>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon service">
                        <i class="fas fa-concierge-bell"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Yêu cầu dịch vụ</h4>
                        <p>Phòng 405 yêu cầu dịch vụ spa</p>
                        <span class="time">12 phút trước</span>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon payment">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Thanh toán hoàn tất</h4>
                        <p>Hóa đơn #SH2024001 - 3,250,000đ</p>
                        <span class="time">18 phút trước</span>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon room-status">
                        <i class="fas fa-tools"></i>
                    </div>
                    <div class="activity-content">
                        <h4>Cập nhật trạng thái phòng</h4>
                        <p>Phòng 302 đã hoàn tất dọn dẹp</p>
                        <span class="time">25 phút trước</span>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
<script src='@Url.Content("~/Areas/NhanVien/assets/js/dashboard.js")'></script>

