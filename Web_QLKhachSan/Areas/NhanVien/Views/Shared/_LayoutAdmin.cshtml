<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/assets/imgs/logo.png" type="image/x-icon" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href='@Url.Content("~/Areas/NhanVien/assets/css/shared.css")' />
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body class="dashboard-body">
    @{
        string currentController = ViewContext.RouteData.Values["controller"].ToString();
        string currentAction = ViewContext.RouteData.Values["action"].ToString();
    }
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-wrapper">
                <img src='@Url.Content("~/assets/imgs/logo.png")' alt="Logo" class="sidebar-logo" />
                <div class="hotel-info">
                    <h3>Serene Horizon</h3>
                    <p>Staff Dashboard</p>
                </div>
            </div>
        </div>

        <div class="user-profile">
            <div class="user-avatar">
                <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User Avatar" />
            </div>
            <div class="user-info">
                @if (Session["HoVaTen"] != null && User.Identity.IsAuthenticated)  {
                    <h4>@Session["HoVaTen"]</h4> 
                    }   
                    <p>Nhân viên lễ tân</p>
            </div>
        </div>

        <nav class="sidebar-nav">
            <ul>
                <li class="nav-item @(currentController == "DashboardNhanVien" ? "active" : "")">
                    <a href="@Url.Action("Index", "DashboardNhanVien")" class="nav-link @(currentController == "DashboardNhanVien" ? "active-link" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Tổng quan</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "QuanLyDatPhong" ? "active" : "")">
                    <a href="@Url.Action("Index", "QuanLyDatPhong")" class="nav-link @(currentController == "QuanLyDatPhong" ? "active-link" : "")">
                        <i class="fas fa-calendar-check"></i>
                        <span>Quản lý đặt phòng</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "QuanLyKhach" ? "active" : "")">
                    <a href="@Url.Action("Index", "QuanLyKhach")" class="nav-link @(currentController == "QuanLyKhach" ? "active-link" : "")">
                        <i class="fas fa-users"></i>
                        <span>Quản lý khách</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "QuanLyPhong" ? "active" : "")">
                    <a href="@Url.Action("Index", "QuanLyPhong")" class="nav-link @(currentController == "QuanLyPhong" ? "active-link" : "")">
                        <i class="fas fa-bed"></i>
                        <span>Quản lý phòng</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "QuanLyDichVu" ? "active" : "")">
                    <a href="@Url.Action("Index", "QuanLyDichVu")" class="nav-link @(currentController == "QuanLyDichVu" ? "active-link" : "")">
                        <i class="fas fa-concierge-bell"></i>
                        <span>Quản lý dịch vụ</span>
                    </a>
                </li>
                <li class="nav-item @(currentController == "ThanhToanHoaDon" ? "active" : "")">
                    <a href="@Url.Action("Index", "ThanhToanHoaDon")" class="nav-link @(currentController == "ThanhToanHoaDon" ? "active-link" : "")">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Thanh toán Hóa đơn</span>
                    </a>
                </li>
               
            </ul>
        </nav>

        <div class="sidebar-footer">
            <button class="logout-btn" onclick="logout()">
                <i class="fas fa-sign-out-alt"></i>
                Đăng xuất
            </button>
        </div>
    </div>
    @RenderBody()
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src='@Url.Content("~/Areas/NhanVien/assets/js/shared.js")'></script>
    @RenderSection("scripts", required: false)
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true,
        });
    </script>
</body>
</html>