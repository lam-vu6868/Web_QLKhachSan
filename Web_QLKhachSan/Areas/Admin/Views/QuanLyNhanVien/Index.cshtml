<!-- ======== MODAL THÊM/SỬA NHÂN VIÊN ======== -->
<div class="employee-modal" id="employeeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="employeeForm">
                <div class="modal-header">
                    <h3 id="modalTitle">Thêm Nhân Viên Mới</h3>
                    <button type="button" class="close-btn" id="closeModalBtn">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="employeeName">Tên Nhân Viên</label>
                            <input type="text" class="form-control" id="employeeName" required>
                        </div>
                        <div class="form-group">
                            <label for="employeeRole">Chức Vụ</label>
                            <select class="form-control" id="employeeRole" required>
                                <option value="">Chọn chức vụ</option>
                                <option value="quản lý">Quản lý</option>
                                <option value="lễ tân">Lễ tân</option>
                                <option value="phục vụ">Phục vụ</option>
                                <option value="kế toán">Kế toán</option>
                                <option value="bảo vệ">Bảo vệ</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="employeeEmail">Email</label>
                            <input type="email" class="form-control" id="employeeEmail" required>
                        </div>
                        <div class="form-group">
                            <label for="employeePhone">Số Điện Thoại</label>
                            <input type="tel" class="form-control" id="employeePhone" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="employeeStatus">Trạng Thái</label>
                            <select class="form-control" id="employeeStatus" required>
                                <option value="active">Hoạt động</option>
                                <option value="inactive">Nghỉ phép</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" id="cancelBtn">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu Nhân Viên</button>
                </div>
            </form>
        </div>
    </div>
</div>
