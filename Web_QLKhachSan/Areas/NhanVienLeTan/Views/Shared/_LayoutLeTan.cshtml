<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Quản Lý Khách Sạn</title>
    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS - Layout -->
    <link href="~/assets/css/NhanVienLeTan/layout.css" rel="stylesheet">
    
    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
 <div class="sidebar-header">
  <h3><i class="fas fa-hotel"></i> Lễ Tân</h3>
            <div class="subtitle">Hotel Management</div>
        </div>

        <ul class="sidebar-menu">
            <li class="menu-item">
       <a href="@Url.Action("Index", "DashboardNVLeTan")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "DashboardNVLeTan" ? "active" : "")">
    <i class="fas fa-tachometer-alt"></i>
 <span>Dashboard</span>
         </a>
          </li>
   
            <li class="menu-item">
                <a href="@Url.Action("Index", "QuanLyDatPhong")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "QuanLyDatPhong" ? "active" : "")">
   <i class="fas fa-calendar-check"></i>
      <span>Quản lý đặt phòng</span>
                </a>
 </li>

   <li class="menu-item">
       <a href="@Url.Action("Index", "CheckInOut")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "CheckInOut" ? "active" : "")">
     <i class="fas fa-door-open"></i>
       <span>Check-in / Check-out</span>
     </a>
            </li>

            <li class="menu-item">
  <a href="@Url.Action("Index", "SoDoPhong")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "SoDoPhong" ? "active" : "")">
   <i class="fas fa-th-large"></i>
            <span>Sơ đồ phòng</span>
       </a>
        </li>

    <li class="menu-item">
            <a href="@Url.Action("Index", "ThanhToan")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "ThanhToan" ? "active" : "")">
         <i class="fas fa-file-invoice-dollar"></i>
           <span>Thanh toán & Hóa đơn</span>
 </a>
            </li>

            <li class="menu-item" style="margin-top: 20px; padding-top: 20px; border-top: 1px solid rgba(255,255,255,0.1);">
     <a href="@Url.Action("Index", "TimPhong")">
  <i class="fas fa-search"></i>
             <span>Tìm phòng trống</span>
              </a>
            </li>

     <li class="menu-item">
         <a href="@Url.Action("Index", "KhachHang")">
              <i class="fas fa-users"></i>
            <span>Khách hàng</span>
     </a>
  </li>

 <li class="menu-item" style="margin-top: auto; position: absolute; bottom: 20px; width: calc(100% - 20px);">
       <a href="@Url.Action("Logout", "Account")">
        <i class="fas fa-sign-out-alt"></i>
            <span>Đăng xuất</span>
    </a>
          </li>
        </ul>
    </aside>

    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <!-- Top Navbar -->
        <nav class="top-navbar">
       <div class="navbar-left">
     <button class="toggle-btn" id="toggleSidebar">
      <i class="fas fa-bars"></i>
 </button>

      <div class="search-box">
  <i class="fas fa-search"></i>
          <input type="text" placeholder="Tìm kiếm đặt phòng, khách hàng...">
     </div>
    </div>

        <div class="navbar-right">
                <button class="notification-btn">
           <i class="fas fa-bell"></i>
     <span class="notification-badge">5</span>
    </button>

         <div class="user-info">
        <div class="user-avatar">
  <i class="fas fa-user"></i>
               </div>
         <div class="user-details">
     <h6>Lễ tân</h6>
          <p>Front Desk</p>
          </div>
                </div>
            </div>
        </nav>

        <!-- Content Area -->
        <div class="content-area">
          @RenderBody()
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" charset="utf-8"></script>
    
    <!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" charset="utf-8"></script>
 
    <!-- Custom JS - Layout -->
    <script src="~/assets/js/NhanVienLeTan/layout.js" charset="utf-8"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
