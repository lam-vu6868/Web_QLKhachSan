<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lễ Tân | Serene Horizon</title>
    <link rel="shortcut icon" href="~/assets/imgs/logo.png" type="image/x-icon" />

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- ✅ Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    
    @Styles.Render("~/Content/css")
    
    <!-- Custom CSS for Layout -->
    <link href="@Url.Content("~/Areas/NhanVienLeTan/Assets/css/layout.css")" rel="stylesheet" />
    
    @RenderSection("styles", required: false)
</head>
<body>
    @{
        string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
        string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
        string tenNhanVien = Session["HoVaTen"]?.ToString() ?? "Nhân viên";
        string vaiTro = Session["VaiTro"]?.ToString() ?? "Lễ Tân";
    }

    <!-- Hamburger Menu Button (Mobile) -->
    <button class="hamburger-menu" id="hamburgerMenu" aria-label="Toggle Menu">
     <span></span>
     <span></span>
     <span></span>
    </button>

    <!-- Sidebar Overlay (Mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="logo-wrapper">
       <img src='@Url.Content("~/assets/imgs/logo.png")' alt="Logo" class="sidebar-logo" />
                <div class="hotel-info">
   <h3>Serene Horizon</h3>
           <p>Front Desk</p>
     </div>
         </div>
        </div>

     <div class="user-profile">
            <div class="user-avatar">
      <img src="https://i.pravatar.cc/150?img=20" alt="User Avatar">
            </div>
       <div class="user-info">
                <h4>@tenNhanVien</h4>
          <p>@vaiTro</p>
         <span class="shift-status">
      <i class="fas fa-circle"></i> Đang làm việc
            </span>
            </div>
  </div>

  <nav class="sidebar-nav">
 <ul>
                <li class="nav-item @(currentController == "DashboardNVLT" ? "active" : "")">
        <a href="@Url.Action("Index", "DashboardNVLT")" class="nav-link @(currentController == "DashboardNVLT" ? "active-link" : "")">
               <i class="fas fa-tachometer-alt"></i>
       <span>Dashboard</span>
          </a>
     </li>
<li class="nav-item @(currentController == "SoDoPhong" ? "active" : "")">
           <a href="@Url.Action("Index", "SoDoPhong")" class="nav-link @(currentController == "SoDoPhong" ? "active-link" : "")">
          <i class="fas fa-th-large"></i>
     <span>Sơ Đồ Phòng</span>
    </a>
     </li>
                <li class="nav-item @(currentController == "DatPhong" ? "active" : "")">
      <a href="@Url.Action("Index", "DatPhong")" class="nav-link @(currentController == "DatPhong" ? "active-link" : "")">
           <i class="fas fa-calendar-plus"></i>
         <span>Quản Lý Đặt Phòng</span>
       </a>
      </li>
     <li class="nav-item @(currentController == "CheckIn" ? "active" : "")">
   <a href="@Url.Action("Index", "CheckIn")" class="nav-link @(currentController == "CheckIn" ? "active-link" : "")">
       <i class="fas fa-sign-in-alt"></i>
             <span>Check-in</span>
        </a>
    </li>
   <li class="nav-item @(currentController == "CheckOut" ? "active" : "")">
         <a href="@Url.Action("Index", "CheckOut")" class="nav-link @(currentController == "CheckOut" ? "active-link" : "")">
                  <i class="fas fa-sign-out-alt"></i>
              <span>Check-out</span>
 </a>
      </li>
          <li class="nav-item @(currentController == "DichVu" ? "active" : "")">
       <a href="@Url.Action("Index", "DichVu")" class="nav-link @(currentController == "DichVu" ? "active-link" : "")">
       <i class="fas fa-concierge-bell"></i>
      <span>Dịch Vụ</span>
 </a>
            </li>
       <li class="nav-item @(currentController == "HoaDon" ? "active" : "")">
      <a href="@Url.Action("Index", "HoaDon")" class="nav-link @(currentController == "HoaDon" ? "active-link" : "")">
           <i class="fas fa-file-invoice-dollar"></i>
                    <span>Hóa Đơn</span>
   </a>
       </li>
     <li class="nav-item @(currentController == "KhachHang" ? "active" : "")">
    <a href="@Url.Action("Index", "KhachHang")" class="nav-link @(currentController == "KhachHang" ? "active-link" : "")">
     <i class="fas fa-users"></i>
          <span>Khách Hàng</span>
       </a>
 </li>
            </ul>
        </nav>

        <div class="sidebar-footer">
         <button class="logout-btn" onclick="dangXuat()" data-logout-url="@Url.Action("DangXuat", "DangNhapNV", new { area = "DangNhapNV" })">
                <i class="fas fa-power-off"></i>
    <span>Đăng Xuất</span>
        </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
          <div class="page-title">
  <h1>@ViewBag.Title</h1>
     <p>
          <i class="far fa-calendar-alt"></i> 
        <span id="currentDate"></span>
         </p>
      </div>
     <div class="top-bar-actions">
      <div class="current-time">
         <i class="far fa-clock"></i>
<span id="currentTime"></span>
            </div>
     <button class="notification-btn" onclick="xemThongBao()">
             <i class="fas fa-bell"></i>
 <span class="notification-badge">5</span>
        </button>
            </div>
        </div>

   <!-- Alert Messages -->
 @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
         <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
      </button>
    </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
         <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
              <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
    </button>
            </div>
        }

        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
           <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
     <button type="button" class="close" data-dismiss="alert">
   <span>&times;</span>
       </button>
        </div>
 }

        @if (TempData["InfoMessage"] != null)
      {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
    <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
            <button type="button" class="close" data-dismiss="alert">
   <span>&times;</span>
    </button>
   </div>
        }

        <!-- Page Content -->
     @RenderBody()
    </div>

    <!-- ✅ MODAL XÁC NHẬN ĐĂNG XUẤT -->
    <div id="logoutModal" class="logout-modal-overlay" style="display: none;">
        <div class="logout-modal">
       <div class="logout-modal-header">
         <i class="fas fa-exclamation-circle"></i>
    <h3>Xác nhận đăng xuất</h3>
          </div>
     <div class="logout-modal-body">
       <p>Bạn có chắc chắn muốn đăng xuất khỏi hệ thống không?</p>
 <p class="logout-user-info">
    <i class="fas fa-user"></i> 
    <span>@tenNhanVien</span> - <span>@vaiTro</span>
                </p>
            </div>
      <div class="logout-modal-footer">
     <button type="button" class="btn-cancel" onclick="closeLogoutModal()">
           <i class="fas fa-times"></i> Hủy
         </button>
                <a href="@Url.Action("DangXuat", "DangNhapNV", new { area = "DangNhapNV" })" class="btn-confirm">
      <i class="fas fa-sign-out-alt"></i> Đăng xuất
          </a>
            </div>
        </div>
    </div>

  <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- ✅ Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    <!-- Custom JS for Layout -->
    <script src="@Url.Content("~/Areas/NhanVienLeTan/Assets/js/layout.js")"></script>
    
    <script>
     // ✅ Hàm mở modal đăng xuất
        function dangXuat() {
         const modal = document.getElementById('logoutModal');
 modal.style.display = 'flex';
     setTimeout(() => modal.classList.add('show'), 10);
        }

     // ✅ Hàm đóng modal
        function closeLogoutModal() {
    const modal = document.getElementById('logoutModal');
            modal.classList.remove('show');
        setTimeout(() => modal.style.display = 'none', 300);
        }

        // ✅ Đóng modal khi click bên ngoài
        document.getElementById('logoutModal')?.addEventListener('click', function(e) {
       if (e.target === this) {
   closeLogoutModal();
            }
        });
    </script>
  
    @RenderSection("scripts", required: false)

    <style>
        /* ✅ MODAL STYLES */
        .logout-modal-overlay {
 position: fixed;
            top: 0;
        left: 0;
            width: 100%;
            height: 100%;
  background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(5px);
     z-index: 10000;
          align-items: center;
    justify-content: center;
     opacity: 0;
    transition: opacity 0.3s ease;
        }

        .logout-modal-overlay.show {
     opacity: 1;
        }

        .logout-modal {
         background: white;
       border-radius: 16px;
      width: 90%;
          max-width: 450px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            transform: scale(0.8);
       transition: transform 0.3s cubic-bezier(0.68, -0.55, 0.27, 1.55);
      overflow: hidden;
 }

    .logout-modal-overlay.show .logout-modal {
       transform: scale(1);
        }

        .logout-modal-header {
background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
        padding: 1.5rem;
        text-align: center;
  }

   .logout-modal-header i {
 font-size: 3rem;
   margin-bottom: 0.5rem;
       animation: pulse 2s infinite;
        }

 @@keyframes pulse {
    0%, 100% { transform: scale(1); }
     50% { transform: scale(1.1); }
        }

        .logout-modal-header h3 {
          margin: 0;
font-size: 1.5rem;
      font-weight: 600;
        }

        .logout-modal-body {
            padding: 2rem;
            text-align: center;
        }

    .logout-modal-body p {
margin: 0 0 1rem 0;
      color: #555;
        font-size: 1rem;
  line-height: 1.6;
    }

    .logout-user-info {
            background: #f8f9fa;
  padding: 1rem;
    border-radius: 8px;
            border-left: 4px solid #007bff;
            display: flex;
            align-items: center;
       justify-content: center;
 gap: 0.5rem;
            color: #333 !important;
  font-weight: 500;
        }

        .logout-user-info i {
  color: #007bff;
        }

 .logout-modal-footer {
   padding: 1.5rem;
  background: #f8f9fa;
     display: flex;
       gap: 1rem;
            justify-content: flex-end;
        }

      .logout-modal-footer button,
      .logout-modal-footer a {
      padding: 0.75rem 1.5rem;
            border-radius: 8px;
     font-weight: 600;
          font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
      border: none;
     }

        .btn-cancel {
            background: #6c757d;
            color: white;
        }

        .btn-cancel:hover {
            background: #5a6268;
    transform: translateY(-2px);
box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
        }

        .btn-confirm {
            background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
        color: white;
     }

        .btn-confirm:hover {
         background: linear-gradient(135deg, #ee5a6f, #ff6b6b);
  transform: translateY(-2px);
box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
        }

        /* ✅ Responsive */
    @@media (max-width: 768px) {
       .logout-modal {
 width: 95%;
  margin: 0 1rem;
  }

            .logout-modal-header h3 {
  font-size: 1.25rem;
}

        .logout-modal-footer {
     flex-direction: column;
            }

      .logout-modal-footer button,
            .logout-modal-footer a {
      width: 100%;
      justify-content: center;
        }
  }
    </style>
</body>
</html>
