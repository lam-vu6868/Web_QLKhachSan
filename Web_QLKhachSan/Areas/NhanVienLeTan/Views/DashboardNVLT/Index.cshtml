@model Web_QLKhachSan.Areas.NhanVienLeTan.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/NhanVienLeTan/Views/Shared/_LayoutNVLT.cshtml";
}

@section styles {
    <!-- Custom CSS for Dashboard -->
    <link href="@Url.Content("~/Areas/NhanVienLeTan/assets/css/dashboard.css")" rel="stylesheet" />
}

<div class="container-fluid">
    @* ==== THỐNG KÊ TỔNG QUAN ==== *@
 <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
         <div class="stat-card bg-primary-light" data-link="@Url.Action("Index", "SoDoPhong")">
    <div class="d-flex justify-content-between align-items-center">
 <div>
          <p class="stat-label mb-2">Tổng phòng</p>
      <h2 class="stat-value">@Model.ThongKePhong.TongSoPhong</h2>
     <div class="progress mt-2">
    <div class="progress-bar bg-light" role="progressbar" style="width: @Model.ThongKePhong.TyLeLayDay%"></div>
          </div>
               <small class="mt-1 d-block">Lấp đầy: @Model.ThongKePhong.TyLeLayDay%</small>
  </div>
  <div class="icon-box bg-white bg-opacity-25">
         <i class="fas fa-door-closed"></i>
  </div>
      </div>
     </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
    <div class="stat-card bg-success-light" data-link="@Url.Action("Index", "SoDoPhong")">
         <div class="d-flex justify-content-between align-items-center">
     <div>
        <p class="stat-label mb-2">Phòng trống</p>
     <h2 class="stat-value">@Model.ThongKePhong.SoPhongTrong</h2>
<small>@Model.ThongKePhong.TyLePhongTrong% tổng số phòng</small>
        </div>
        <div class="icon-box bg-white bg-opacity-25">
<i class="fas fa-door-open"></i>
         </div>
         </div>
    </div>
    </div>

        <div class="col-xl-3 col-md-6 mb-3">
          <div class="stat-card bg-warning-light" data-link="@Url.Action("Index", "HoaDon")">
 <div class="d-flex justify-content-between align-items-center">
       <div>
               <p class="stat-label mb-2">Doanh thu hôm nay</p>
          <h2 class="stat-value">@((Model.DoanhThuHomNay / 1000000).ToString("F1"))tr</h2>
 <small>Tháng này: @((Model.DoanhThuThangNay / 1000000).ToString("F1"))tr</small>
       </div>
   <div class="icon-box bg-white bg-opacity-25">
  <i class="fas fa-dollar-sign"></i>
   </div>
    </div>
 </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stat-card bg-danger-light" data-link="@Url.Action("Index", "CheckIn")">
       <div class="d-flex justify-content-between align-items-center">
      <div>
       <p class="stat-label mb-2">Check-in hôm nay</p>
   <h2 class="stat-value">@Model.DanhSachCheckInHomNay.Count</h2>
           <small>Check-out: @Model.DanhSachCheckOutHomNay.Count</small>
    </div>
         <div class="icon-box bg-white bg-opacity-25">
         <i class="fas fa-calendar-check"></i>
    </div>
     </div>
     </div>
     </div>
    </div>

    <div class="row">
        @* ==== BIỂU ĐỒ DOANH THU ==== *@
     <div class="col-lg-8 mb-4">
 <div class="card shadow">
  <div class="card-header py-3 d-flex justify-content-between align-items-center">
  <h6 class="m-0 font-weight-bold text-primary">
      <i class="fas fa-chart-line"></i> Doanh thu 7 ngày gần nhất
    </h6>
   <div class="dropdown">
   <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-toggle="dropdown">
       <i class="fas fa-ellipsis-v"></i>
       </button>
    <div class="dropdown-menu dropdown-menu-right">
         <a class="dropdown-item" href="#"><i class="fas fa-download"></i> Xuất Excel</a>
          <a class="dropdown-item" href="#"><i class="fas fa-print"></i> In báo cáo</a>
      </div>
          </div>
     </div>
            <div class="card-body">
   <div class="chart-container">
   <canvas id="doanhThuChart"
           data-labels='[@Html.Raw(string.Join(",", Model.DoanhThu7NgayGanNhat.Select(d => $"\"{d.Label}\"")))]'
        data-values='[@string.Join(",", Model.DoanhThu7NgayGanNhat.Select(d => d.DoanhThu))]'></canvas>
       </div>
   </div>
       </div>
        </div>

  @* ==== THỐNG KÊ PHÒNG ==== *@
    <div class="col-lg-4 mb-4">
    <div class="card shadow">
    <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">
    <i class="fas fa-chart-pie"></i> Trạng thái phòng
       </h6>
     </div>
  <div class="card-body">
    <canvas id="trangThaiPhongChart"
             data-values='[@Model.ThongKePhong.SoPhongTrong,@Model.ThongKePhong.SoPhongDaDat,@Model.ThongKePhong.SoPhongDangO,@Model.ThongKePhong.SoPhongDangDon,@Model.ThongKePhong.SoPhongBaoTri]'></canvas>
 <div class="mt-3">
  <div class="d-flex justify-content-between align-items-center mb-2">
   <span><i class="fas fa-circle text-success"></i> Trống</span>
     <strong>@Model.ThongKePhong.SoPhongTrong</strong>
      </div>
      <div class="d-flex justify-content-between align-items-center mb-2">
 <span><i class="fas fa-circle text-warning"></i> Đã đặt</span>
   <strong>@Model.ThongKePhong.SoPhongDaDat</strong>
       </div>
  <div class="d-flex justify-content-between align-items-center mb-2">
    <span><i class="fas fa-circle text-danger"></i> Đang ở</span>
       <strong>@Model.ThongKePhong.SoPhongDangO</strong>
           </div>
           <div class="d-flex justify-content-between align-items-center mb-2">
     <span><i class="fas fa-circle text-info"></i> Đang dọn</span>
    <strong>@Model.ThongKePhong.SoPhongDangDon</strong>
</div>
     <div class="d-flex justify-content-between align-items-center">
         <span><i class="fas fa-circle text-secondary"></i> Bảo trì</span>
  <strong>@Model.ThongKePhong.SoPhongBaoTri</strong>
</div>
  </div>
         </div>
   </div>
    </div>
    </div>

    <div class="row">
     @* ==== CHECK-IN HÔM NAY ==== *@
      <div class="col-lg-6 mb-4">
        <div class="card shadow">
       <div class="card-header py-3 d-flex justify-content-between align-items-center">
         <h6 class="m-0 font-weight-bold text-primary">
     <i class="fas fa-sign-in-alt"></i> Check-in hôm nay
     <span class="badge badge-primary ml-2">@Model.DanhSachCheckInHomNay.Count</span>
      </h6>
         <a href="@Url.Action("Index", "CheckIn")" class="btn btn-sm btn-primary">
         Xem tất cả <i class="fas fa-arrow-right"></i>
       </a>
      </div>
  <div class="card-body p-0">
    @if (Model.DanhSachCheckInHomNay.Any())
               {
   <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="bg-light">
    <tr>
    <th>Mã ĐP</th>
      <th>Khách hàng</th>
    <th>Phòng</th>
      <th>Giờ</th>
        <th>Trạng thái</th>
    </tr>
 </thead>
      <tbody>
@foreach (var item in Model.DanhSachCheckInHomNay.Take(5))
        {
   <tr onclick="window.location='@Url.Action("Index", "CheckIn")'">
        <td><strong>@item.MaDatPhong</strong></td>
<td>
     <div>@item.TenKhachHang</div>
 <small class="text-muted">@item.SoDienThoai</small>
         </td>
    <td>@item.TenPhong</td>
         <td>@(item.NgayCheckIn?.ToString("HH:mm"))</td>
   <td>
         <span class="badge badge-custom" style="background-color: @item.TrangThaiColor">
 @item.TrangThaiText
            </span>
        </td>
    </tr>
        }
     </tbody>
      </table>
           </div>
     }
        else
    {
    <div class="empty-state">
    <i class="fas fa-inbox"></i>
        <p>Không có check-in nào hôm nay</p>
      </div>
     }
    </div>
            </div>
 </div>

        @* ==== CHECK-OUT HÔM NAY ==== *@
   <div class="col-lg-6 mb-4">
    <div class="card shadow">
   <div class="card-header py-3 d-flex justify-content-between align-items-center">
         <h6 class="m-0 font-weight-bold text-primary">
     <i class="fas fa-sign-out-alt"></i> Check-out hôm nay
     <span class="badge badge-danger ml-2">@Model.DanhSachCheckOutHomNay.Count</span>
          </h6>
         <a href="@Url.Action("Index", "CheckOut")" class="btn btn-sm btn-danger">
  Xem tất cả <i class="fas fa-arrow-right"></i>
    </a>
     </div>
           <div class="card-body p-0">
        @if (Model.DanhSachCheckOutHomNay.Any())
   {
        <div class="table-responsive">
       <table class="table table-hover mb-0">
         <thead class="bg-light">
     <tr>
<th>Mã ĐP</th>
        <th>Khách hàng</th>
         <th>Phòng</th>
       <th>Giờ</th>
  <th>Trạng thái</th>
   </tr>
       </thead>
       <tbody>
            @foreach (var item in Model.DanhSachCheckOutHomNay.Take(5))
       {
       <tr onclick="window.location='@Url.Action("Index", "CheckOut")'">
 <td><strong>@item.MaDatPhong</strong></td>
         <td>
           <div>@item.TenKhachHang</div>
      <small class="text-muted">@item.SoDienThoai</small>
 </td>
    <td>@item.TenPhong</td>
      <td>
             @(item.NgayCheckOut?.ToString("HH:mm"))
          @if (item.QuaGioCheckOut)
  {
 <span class="badge badge-danger ml-1">Trễ</span>
   }
       </td>
       <td>
   <span class="badge badge-custom" style="background-color: @item.TrangThaiColor">
    @item.TrangThaiText
       </span>
    </td>
   </tr>
     }
      </tbody>
       </table>
 </div>
  }
  else
          {
      <div class="empty-state">
   <i class="fas fa-inbox"></i>
<p>Không có check-out nào hôm nay</p>
 </div>
   }
           </div>
    </div>
        </div>
    </div>

    @* ==== THÔNG BÁO CẦN CHÚ Ý ==== *@
    @if (Model.ThongBaoCanChuY.Any())
    {
        <div class="row">
  <div class="col-12 mb-4">
   <div class="card shadow">
  <div class="card-header py-3">
         <h6 class="m-0 font-weight-bold text-primary">
   <i class="fas fa-bell"></i> Thông báo cần chú ý
    <span class="badge badge-warning ml-2">@Model.ThongBaoCanChuY.Count</span>
      </h6>
   </div>
<div class="card-body">
   @foreach (var thongBao in Model.ThongBaoCanChuY.Take(5))
   {
             <div class="notification-item @thongBao.LoaiThongBao" data-link="@thongBao.Link" onclick="window.location='@thongBao.Link'">
      <div class="d-flex align-items-start">
   <div class="mr-3">
             <i class="fas @thongBao.Icon fa-2x"></i>
 </div>
   <div class="flex-grow-1">
  <h6 class="mb-1">@thongBao.TieuDe</h6>
    <p class="mb-1">@thongBao.NoiDung</p>
           <small class="text-muted">
          <i class="far fa-clock"></i> @thongBao.ThoiGianTuongDoi
   </small>
  </div>
  <span class="badge @thongBao.BadgeClass">@thongBao.LoaiThongBao</span>
         </div>
  </div>
         }
  </div>
     </div>
 </div>
        </div>
    }
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom Dashboard JS -->
    <script src="@Url.Content("~/Areas/NhanVienLeTan/assets/js/dashboard.js")"></script>
}
