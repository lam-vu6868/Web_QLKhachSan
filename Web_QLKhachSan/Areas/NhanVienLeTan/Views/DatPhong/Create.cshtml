@model Web_QLKhachSan.Areas.NhanVienLeTan.ViewModels.DatPhong.DatPhongCreateViewModel
@{
    ViewBag.Title = "Tạo Đơn Đặt Phòng Mới";
    Layout = "~/Areas/NhanVienLeTan/Views/Shared/_LayoutNVLT.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Areas/NhanVienLeTan/assets/css/datPhong.css")" rel="stylesheet" />
}

<div class="container-fluid">
    @* ==== HEADER ==== *@
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus-circle"></i> Tạo Đơn Đặt Phòng Mới
        </h1>
      <a href="@Url.Action("Index", "DatPhong")" class="btn btn-secondary btn-icon-split shadow-sm">
            <span class="icon text-white-50">
     <i class="fas fa-arrow-left"></i>
      </span>
            <span class="text">Quay lại</span>
        </a>
    </div>

    @* ==== FORM ==== *@
    @using (Html.BeginForm("Create", "DatPhong", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

        <div class="row">
  @* ==== LEFT COLUMN ==== *@
            <div class="col-lg-8">
     @* ===== SECTION 1: THÔNG TIN KHÁCH HÀNG ===== *@
      <div class="card shadow mb-4">
                <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
     <i class="fas fa-user"></i> Thông tin khách hàng
           </h6>
   </div>
     <div class="card-body">
     <div class="row">
         <div class="col-md-4">
   <div class="form-group">
         @Html.LabelFor(m => m.SoDienThoai, new { @class = "font-weight-bold" })
   <span class="text-danger">*</span>
          <div class="input-group">
              @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "0123456789", id = "txtSoDienThoai" })
      <div class="input-group-append">
           <button type="button" class="btn btn-primary" id="btnTimKhach">
    <i class="fas fa-search"></i>
        </button>
     </div>
   </div>
          @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger small" })
           <small class="form-text text-muted">Nhấn tìm để kiểm tra khách cũ</small>
            </div>
    </div>

     <div class="col-md-8">
    <div class="form-group">
     @Html.LabelFor(m => m.HoVaTen, new { @class = "font-weight-bold" })
        <span class="text-danger">*</span>
         @Html.TextBoxFor(m => m.HoVaTen, new { @class = "form-control", placeholder = "Nguyễn Văn A", id = "txtHoVaTen" })
       @Html.ValidationMessageFor(m => m.HoVaTen, "", new { @class = "text-danger small" })
          </div>
    </div>
            </div>

   <div class="row">
    <div class="col-md-6">
   <div class="form-group">
          @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email@example.com", type = "email", id = "txtEmail" })
         @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
 </div>
           </div>

            <div class="col-md-6">
     <div class="form-group">
  @Html.LabelFor(m => m.DiaChi, new { @class = "font-weight-bold" })
                 @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Địa chỉ", id = "txtDiaChi" })
</div>
         </div>
  </div>

     <div class="row">
      <div class="col-md-6">
            <div class="form-group">
       <label class="font-weight-bold">Giới tính</label><br />
            <div class="form-check form-check-inline">
       @Html.RadioButtonFor(m => m.GioiTinh, 0, new { @class = "form-check-input", id = "gioiTinhNam" })
<label class="form-check-label" for="gioiTinhNam">Nam</label>
          </div>
    <div class="form-check form-check-inline">
             @Html.RadioButtonFor(m => m.GioiTinh, 1, new { @class = "form-check-input", id = "gioiTinhNu" })
       <label class="form-check-label" for="gioiTinhNu">Nữ</label>
       </div>
     <div class="form-check form-check-inline">
    @Html.RadioButtonFor(m => m.GioiTinh, 2, new { @class = "form-check-input", id = "gioiTinhKhac" })
       <label class="form-check-label" for="gioiTinhKhac">Khác</label>
           </div>
       </div>
        </div>
       </div>
    </div>
       </div>

     @* ===== SECTION 2: THÔNG TIN ĐẶT PHÒNG ===== *@
    <div class="card shadow mb-4">
          <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
   <i class="fas fa-calendar-alt"></i> Thông tin đặt phòng
</h6>
   </div>
        <div class="card-body">
         <div class="row">
      <div class="col-md-4">
            <div class="form-group">
         @Html.LabelFor(m => m.NgayNhan, new { @class = "font-weight-bold" })
    <span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.NgayNhan, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", id = "txtNgayNhan" })
     @Html.ValidationMessageFor(m => m.NgayNhan, "", new { @class = "text-danger small" })
      </div>
     </div>

       <div class="col-md-4">
    <div class="form-group">
         @Html.LabelFor(m => m.NgayTra, new { @class = "font-weight-bold" })
          <span class="text-danger">*</span>
            @Html.TextBoxFor(m => m.NgayTra, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", id = "txtNgayTra" })
          @Html.ValidationMessageFor(m => m.NgayTra, "", new { @class = "text-danger small" })
        </div>
                   </div>

        <div class="col-md-4">
        <div class="form-group">
            <label class="font-weight-bold">Số đêm</label>
             <input type="text" class="form-control" id="txtSoDem" value="@Model.SoDem" readonly />
       </div>
       </div>
 </div>

<div class="row">
         <div class="col-md-6">
    <div class="form-group">
              @Html.LabelFor(m => m.SoLuongKhach, new { @class = "font-weight-bold" })
        <span class="text-danger">*</span>
      @Html.TextBoxFor(m => m.SoLuongKhach, new { @class = "form-control", type = "number", min = "1", max = "50" })
                @Html.ValidationMessageFor(m => m.SoLuongKhach, "", new { @class = "text-danger small" })
    </div>
      </div>

   <div class="col-md-6">
   <div class="form-group">
        @Html.LabelFor(m => m.GhiChu, new { @class = "font-weight-bold" })
         @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", rows = "3", placeholder = "Ghi chú đặc biệt..." })
       </div>
         </div>
             </div>
                </div>
       </div>

                @* ===== SECTION 3: CHỌN PHÒNG ===== *@
                <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
       <i class="fas fa-bed"></i> Chọn phòng
           </h6>
      </div>
       <div class="card-body">
 <table class="table table-bordered table-hover" id="tableChonPhong">
      <thead class="thead-light">
                <tr>
            <th>Loại phòng</th>
           <th width="100">Số lượng</th>
       <th width="120">Tầng ưu tiên</th>
            <th width="150">Đơn giá/đêm</th>
         <th width="100">Giảm giá (%)</th>
       <th width="150">Thành tiền</th>
   </tr>
          </thead>
<tbody>
@for (int i = 0; i < Model.DanhSachPhongDat.Count; i++)
    {
          <tr>
              <td>
   @Html.HiddenFor(m => m.DanhSachPhongDat[i].LoaiPhongId)
   @Html.HiddenFor(m => m.DanhSachPhongDat[i].DonGia)
       <strong>@Model.DanhSachPhongDat[i].TenLoaiPhong</strong><br />
        <small class="text-muted">@Model.DanhSachPhongDat[i].MoTa</small><br />
          <small class="text-info">
       <i class="fas fa-users"></i> @Model.DanhSachPhongDat[i].SoNguoiToiDa người |
           <i class="fas fa-expand-arrows-alt"></i> @Model.DanhSachPhongDat[i].DienTich m²
 </small><br />
           <small class="text-success">
            <i class="fas fa-door-open"></i> Còn @Model.DanhSachPhongDat[i].SoPhongTrong phòng trống
              </small>
           </td>
   <td>
           @Html.TextBoxFor(m => m.DanhSachPhongDat[i].SoLuong, new { @class = "form-control text-center input-so-luong", type = "number", min = "0", max = Model.DanhSachPhongDat[i].SoPhongTrong, data_index = i })
    </td>
       <td>
        <select name="DanhSachPhongDat[@i].Tang" class="form-control select-tang" data-loaiphongid="@Model.DanhSachPhongDat[i].LoaiPhongId" data-index="@i">
<option value="">-- Chọn tầng --</option>
        </select>
           </td>
       <td class="text-right">
 <strong class="text-primary">@Model.DanhSachPhongDat[i].DonGia.ToString("N0")đ</strong>
            </td>
            <td>
           @Html.TextBoxFor(m => m.DanhSachPhongDat[i].GiamGia, new { @class = "form-control text-center input-giam-gia", type = "number", min = "0", max = "100", step = "0.1", data_index = i })
   </td>
<td class="text-right">
      <strong class="text-danger thanh-tien" data-index="@i">0đ</strong>
    </td>
           </tr>
    }
          </tbody>
</table>
     </div>
           </div>
            </div>
            @* ✅ ĐÓNG .col-lg-8 *@

      @* ==== RIGHT COLUMN - SUMMARY ==== *@
            <div class="col-lg-4">
    <div class="card shadow mb-4 sticky-top" style="top: 20px;">
               <div class="card-header py-3 bg-primary text-white">
    <h6 class="m-0 font-weight-bold">
           <i class="fas fa-money-bill-wave"></i> Tổng quan thanh toán
     </h6>
        </div>
       <div class="card-body">
          <div class="price-summary">
      <div class="d-flex justify-content-between mb-2">
            <span>Tổng tiền phòng:</span>
            <strong id="tongTienPhong">0đ</strong>
         </div>
    <div class="d-flex justify-content-between mb-2">
           <span>Giảm giá:</span>
        <strong class="text-success" id="tongGiamGia">0đ</strong>
        </div>
 <hr />
       <div class="d-flex justify-content-between mb-3">
           <h5 class="font-weight-bold">TỔNG CỘNG:</h5>
            <h5 class="font-weight-bold text-danger" id="tongCong">0đ</h5>
     </div>

      <div class="form-group">
     <label class="font-weight-bold">Hình thức thanh toán</label>
 <div class="custom-control custom-radio">
     @Html.RadioButtonFor(m => m.HinhThucThanhToan, 0, new { @class = "custom-control-input", id = "htTienMat", @checked = "checked" })
          <label class="custom-control-label" for="htTienMat">
           <i class="fas fa-money-bill-wave text-success"></i> Tiền mặt
          </label>
           </div>
         <div class="custom-control custom-radio">
         @Html.RadioButtonFor(m => m.HinhThucThanhToan, 1, new { @class = "custom-control-input", id = "htChuyenKhoan" })
    <label class="custom-control-label" for="htChuyenKhoan">
 <i class="fas fa-university text-primary"></i> Chuyển khoản
      </label>
         </div>
 </div>

 <div class="form-group">
     @Html.LabelFor(m => m.TienDatCoc, new { @class = "font-weight-bold" })
        <div class="input-group">
  <div class="input-group-prepend">
       <span class="input-group-text"><i class="fas fa-coins"></i></span>
               </div>
     @Html.TextBoxFor(m => m.TienDatCoc, new { @class = "form-control", type = "number", min = "0", step = "1000", placeholder = "0" })
           <div class="input-group-append">
  <span class="input-group-text">đ</span>
          </div>
     </div>
        <small class="form-text text-muted">Để trống nếu không cọc</small>
             </div>
          </div>

      <hr />

                  <div class="d-grid gap-2">
      <button type="submit" class="btn btn-primary btn-lg btn-block">
            <i class="fas fa-check"></i> Tạo đơn đặt phòng
            </button>
       <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">
  <i class="fas fa-times"></i> Hủy
  </a>
         </div>
     </div>
  </div>
   </div>
         @* ✅ ĐÓNG .col-lg-4 *@
        </div>
        @* ✅ ĐÓNG .row *@
    }
    @* ✅ ĐÓNG @using *@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Areas/NhanVienLeTan/assets/js/datPhong.js")"></script>
}
