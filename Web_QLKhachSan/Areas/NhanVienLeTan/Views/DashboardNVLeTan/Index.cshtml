@{
    ViewBag.Title = "Dashboard - Lễ Tân";
    Layout = "~/Areas/NhanVienLeTan/Views/Shared/_LayoutLeTan.cshtml";
}

@section styles {
    <link href="~/assets/css/NhanVienLeTan/dashboard.css" rel="stylesheet">
}

<div class="dashboard-container">
<!-- Header -->
    <div class="dashboard-header">
        <div class="header-content">
     <div class="header-left">
        <h1><i class="fas fa-tachometer-alt"></i> Dashboard Lễ Tân</h1>
        <p class="text-muted">Chào mừng bạn trở lại! <span id="current-date"></span></p>
            </div>
     <div class="header-right">
  <div class="current-time-box">
     <i class="fas fa-clock"></i>
       <span id="current-time"></span>
    </div>
          </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card card-blue">
            <div class="stat-icon">
    <i class="fas fa-calendar-check"></i>
            </div>
        <div class="stat-info">
    <h3 id="stat-dat-phong">0</h3>
          <p>Đặt phòng hôm nay</p>
       </div>
        </div>

        <div class="stat-card card-green">
    <div class="stat-icon">
       <i class="fas fa-door-open"></i>
   </div>
       <div class="stat-info">
 <h3 id="stat-checkin">0</h3>
     <p>Check-in hôm nay</p>
    </div>
        </div>

        <div class="stat-card card-orange">
      <div class="stat-icon">
       <i class="fas fa-door-closed"></i>
      </div>
            <div class="stat-info">
       <h3 id="stat-checkout">0</h3>
      <p>Check-out hôm nay</p>
            </div>
        </div>

      <div class="stat-card card-purple">
            <div class="stat-icon">
   <i class="fas fa-bed"></i>
            </div>
              <div class="stat-info">
                    <h3 id="stat-phong-trong">0/<span id="stat-tong-phong">0</span></h3>
         <p>Phòng trống</p>
         
                </div>
        </div>

            <div class="stat-card card-red">
              <div class="stat-icon">
            <i class="fas fa-money-bill-wave"></i>
    </div>
         <div class="stat-info">
 <h3 id="stat-doanh-thu">0 VNĐ</h3>
        <p>Doanh thu hôm nay</p>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
 <div class="quick-actions">
        <h2><i class="fas fa-bolt"></i> Thao tác nhanh</h2>
        <div class="actions-grid">
            <a href="@Url.Action("Index", "QuanLyDatPhong")" class="action-btn action-blue">
          <i class="fas fa-plus-circle"></i>
       <span>Đặt phòng mới</span>
       </a>
            <a href="@Url.Action("Index", "CheckInOut")" class="action-btn action-green">
<i class="fas fa-sign-in-alt"></i>
    <span>Check-in</span>
            </a>
       <a href="@Url.Action("Index", "CheckInOut")" class="action-btn action-orange">
       <i class="fas fa-sign-out-alt"></i>
            <span>Check-out</span>
    </a>
   <a href="@Url.Action("Index", "SoDoPhong")" class="action-btn action-purple">
     <i class="fas fa-th-large"></i>
                <span>Sơ đồ phòng</span>
      </a>
       <a href="@Url.Action("Index", "ThanhToan")" class="action-btn action-red">
           <i class="fas fa-file-invoice-dollar"></i>
           <span>Thanh toán</span>
  </a>
       <a href="@Url.Action("Index", "TimPhong")" class="action-btn action-teal">
            <i class="fas fa-search"></i>
 <span>Tìm phòng trống</span>
       </a>
     </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Check-in sắp tới -->
        <div class="content-card">
        <div class="card-header">
        <h3><i class="fas fa-sign-in-alt text-success"></i> Check-in hôm nay</h3>
          <span class="badge-count" id="badge-checkin">0</span>
   </div>
     <div class="card-body">
       <div id="list-checkin">
<div class="text-center py-3">
       <div class="spinner-border text-primary" role="status">
         <span class="visually-hidden">Đang tải...</span>
      </div>
   </div>
    </div>
      </div>
          <div class="card-footer">
           <a href="@Url.Action("Index", "CheckInOut")">Xem tất cả <i class="fas fa-arrow-right"></i></a>
     </div>
 </div>

        <!-- Check-out sắp tới -->
        <div class="content-card">
       <div class="card-header">
<h3><i class="fas fa-sign-out-alt text-warning"></i> Check-out hôm nay</h3>
    <span class="badge-count" id="badge-checkout">0</span>
     </div>
            <div class="card-body">
         <div id="list-checkout">
              <div class="text-center py-3">
    <div class="spinner-border text-primary" role="status">
       <span class="visually-hidden">Đang tải...</span>
              </div>
       </div>
        </div>
       </div>
            <div class="card-footer">
    <a href="@Url.Action("Index", "CheckInOut")">Xem tất cả <i class="fas fa-arrow-right"></i></a>
        </div>
    </div>

  <!-- Hoạt động gần đây -->
        <div class="content-card full-width">
 <div class="card-header">
 <h3><i class="fas fa-history text-info"></i> Hoạt động gần đây</h3>
</div>
            <div class="card-body">
          <div id="list-activities">
          <div class="text-center py-3">
            <div class="spinner-border text-primary" role="status">
             <span class="visually-hidden">Đang tải...</span>
                  </div>
                    </div>
    </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/NhanVienLeTan/dashboard.js"></script>
}
